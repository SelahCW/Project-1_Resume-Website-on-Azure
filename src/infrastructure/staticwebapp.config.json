{
    "trailingSlash": "auto",
    "routes": [
    {
        "route": "/src/website/*",
        "allowedRoles": []
    },
    {  
        "route": "/src/website/index.html",
        "allowedRoles": []
    }
    {
        "route": "/src/website/images/*",
        "headers": {
            "cache-control": "must-revalidate, max-age=15770000"
        }
    }
    ],
    "platform": {
        "apiRuntime": "node:16"
    },
    "navigationFallback": {
        "rewrite": "/website/index.html",
        "exclude": ["/website/images/*.{png,jpg,gif}", "/website/css/*"]
    },
    "responseOverrides": {
        "404": {
            "rewrite": "/error404.html"
        }
    },
    "globalHeaders": {
        "content-security-policy": "default-src https: 'unsafe-eval 'unsafe-inline'; object-src 'none"
    }
}